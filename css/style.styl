/*
	VARIABLES
-------------------------------------------------------------------------*/
amarillo-corporativo = #f2ed82
verde-principal = #5bafa5
negroWeb = #444242
rosadoContacto = #f29696
morado = #8470af
azul-cristian = #5a7e9f

/*
	MIXINS
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
flex-center()
	display flex
	flex-wrap wrap
	justify-content center
	
flex-around()
	display flex
	flex-wrap wrap
	justify-content space-around
	
flex-between()
	display flex
	flex-wrap wrap
	justify-content space-between


p
	margin 0
	font-size 1em
	color negroWeb  
	
p
	font-size 1.5em
	font-family 'Geog-LgIt',sans-serif	

/*
    HEADER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
body
	font-size 16px
	background-color black
	background-image url("../img/background.jpg")
	background-position center
    background-repeat no-repeat
    background-size cover
    height 100vh
    
header
	background amarillo-corporativo
	padding 0 0 0 0.5em
	flex-between()
	figure
		width 7em
		a
			display inline-block
			color negroWeb
			width 100%
			padding-top 0.7em
			img
				width 100%
	
	nav
		ul
			padding 0
			margin 0
			li
				list-style none
				display inline-block
				button
					display none					
					img
						width 100%
				ul
					padding 0
					margin 0
					li
						&:nth-child(2)
							background none
				a
					display inline-block
					color negroWeb
					width 2.5em
					img
						width 100%
					p
						font-size 0.8em
						text-align center
						font-family 'Geogtq-Lg',sans-serif
				
				&:nth-child(2)
					background white
					padding 1em 1em 0.5em
					margin-left 0.5em
					margin-top -0.3em
					input
						display none
						+ label
							cursor pointer
							p
								font-size 0.8em
						&:checked ~ ul
							right 0
					ul
						background amarillo-corporativo
						padding 0.5em
						position fixed
						right -6em
						top 5.1em
						transition .4s linear
						width 6em
						z-index 5
						li
							list-style none
							display block
							text-align center
							a
								display inline-block
								color negroWeb
								font-size 1em
								span
									display block
									font-size 2.7em
							&:nth-child(2)
								margin 0
							&:last-child
								background none
						
								

/*
    INDEX
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/					
.bioIndex
	background verde-principal
	padding 1em
	position relative
	width 33em
	margin 4em auto 2em auto
	box-shadow -6px 7px 0px rgba(124, 169, 159, 0.4)

	&-title
		position absolute
		top -3em
		left 50%
		transform translateX(-50%)
		.titulo
			width 12em
			margin 0 auto
			img
				width 100%
		h4
			font-family 'insigne-Cabrito-NorRegIt',sans-serif
			font-size 1.5em
			color white
			margin 0
			text-align center
			text-decoration underline
	&-container
		&-bio
			flex-between()
			padding-top 3.5em
			.item
				width 25%
				&-text
					padding-left 2em
					span
						display block
						font-family 'Geog-LgIt',sans-serif
						font-size 2em
						text-transform uppercase
						color white
						&:nth-child(1)
						&:nth-child(2)
							&:after
								content "\e99f"
								font-family 'iconitos'
								font-size 1em
								color morado
								padding-left 0.2em
				figure
					font-size 4em
					text-align center
				.avatar
					width 15em
					margin 0 auto 1em auto
					border-radius 50%
					border 3px solid amarillo-corporativo					
					padding 0.3em
					img
						width 100%
						border-radius 50%
				&:nth-child(2)
					width 50%
		&-text
			text-align center
			p
				color white
				width 60%
				margin 0 auto
				font-family 'Geog-LgIt',sans-serif
				font-size 1.3em
				span
					text-decoration underline
			.icon
				color rosadoContacto
				font-size 2.1em
				display block
				margin 0.3em 0
			a
				color white
				font-size 1.3em
				text-decoration underline
				font-family 'insigne-Cabrito-NorRegIt',sans-serif
				
.bienvenidoContainer
	width 60%
	margin 0 auto
	&-title
		text-align center
		.titulo
			width 30em
			margin 4em auto 0 auto
			img
				width 100%
		h4
			font-family 'insigne-Cabrito-NorRegIt',sans-serif
			font-size 1.8em
			color azul-cristian
			margin 0
			text-align center
			text-decoration underline
	&-section
		flex-center()
		margin-top 2em
		padding 1em
		.datos
			width 40%
			position relative
			&-titulo
				position relative
				a
					display inline-block
					img
						width 12em
						margin 0 auto
				&:before
					content url('../img/iconosSVG/figura2.svg')
					width 5em
					display inline-block
					position absolute
					top -1em
					left 7em
			p
				font-size 1.5em
				font-family 'Geog-LgIt',sans-serif
				color negroWeb
				width 80%
			&:nth-child(1)
				margin-right 1em
			button
				background none
				position absolute
				top 0.2em
				right 0.2em
				z-index 3
				border 0
				width 3em
				outline none
				img
					width 100%
		&:nth-child(4)
			display none
		.woof
			text-align right
			p
				margin 0 0 0 auto
				
.contactoContainer
	background rosadoContacto
	width 40em
	padding 1em 2em
	margin 3em auto 0 auto
	&-title
		text-align center
		.titulo
			width 45%
			margin 1em auto 1em auto
			img
				width 100%	
	form
		
		.item
			flex-between()
			margin-bottom 0.5em
			span
				font-size 1.3em
				color white
				font-family	'Geog-LgIt',sans-serif
				width 10%
			input
				display inline-block
				height 2.5em
				border 3px solid azul-cristian
				text-indent 1em
				width 80%
			textarea
				display inline-block
				height 8em
				border 3px solid azul-cristian
				padding 0.3em 0.3em 0.3em 0
				text-indent 1em
				width 80%
				resize none
		.submit
			text-align right
			input
				font-size 1.6em
				color white
				background none
				border 0
				font-family	'Geog-LgIt',sans-serif
				text-decoration underline
			
/*
    BIO
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/		
.bioPage
	background none
	box-shadow none
	width 40em
	margin-top 2em
	&-container
		&-bio
			.item
				&-text
					span
						color negroWeb !important
						font-size 2.5em
				.avatar
					width 20em
				figure
					font-size 7em
					
.bioContainer
	width 70%
	margin 0 auto
	&-hello
		text-align center
		figure
			width 15em
			margin 0 auto
			img
				width 100%
		h3
			font-size 2em
			color azul-cristian
			font-family 'insigne-Cabrito-NorRegIt',sans-serif
			text-decoration underline
			margin-top 0
		p
			color negroWeb
			font-size 1.8em
			font-family 'Geog-LgIt',sans-serif
			width 80%
			margin 1em auto
	&-items
		figure
			width 15em
			display inline-block
			img
				width 100%
		.figure-especial
			float right
			margin-top 3em
		.figura
			display inline-block
			font-size 5em
			margin-left 1.5em
			position relative
			top 0.3em
		.resum
			flex-between()
			p
				width 60%
				font-family 'Geog-LgIt',sans-serif
				font-size 1.5em
				color negroWeb
				&:nth-child(2)
					margin 0.5em 0 0 auto
			&-idiomas
				flex-center()
				width 100%
				margin 1.5em 0
				font-family 'Geog-MdIt',sans-serif
				font-size 1.3em
				span
					&:nth-child(2)
						margin 0 1.3em
			.figure
				width 7em
				margin -0.5em auto 0 1em
				img
					width 100%
		.resum-point
			padding-left 2em
			margin-bottom 1em
			p
				color negroWeb
				&:before
					content "\e99e"
					font-family 'iconitos'
					font-size 1.1em
					color azul-cristian
					padding-right 0.5em
	&-contact
		background amarillo-corporativo
		padding 1em
		.item
			flex-center()
			color negroWeb
			span
				font-size 2.3em
				padding-right 0.2em
			p
				display inline-block
				position relative
				top -0.1em
.asterisco
	color rosadoContacto
	font-size 3em
	display block
	text-align center
			

/*
    WORK-DETALLES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/	
.workContainer	
	width 70%
	margin 0 auto
	padding 4em 0
	&-head
		flex-center()
		height 55vh
		&-mobile
			display none
		&-video
			width 50%
			text-align right
			position relative
			iframe
				position absolute
				top 0
				left 0
				width 100%
				height 100%
			
		&-title
			width 30%
			position relative
			figure
				width 15em
				margin 5em 0 0 -2em
				img 
					width 100%
			p
				position absolute
				left 0.5em
				bottom 0
	&-problema
		margin-top 2em
		figure
			width 15em
			margin 0
			img
				width 100%
		p
			margin 0.7em
		&-imgComposicion
			width 70%
			margin 1em auto
			img
				width 100%
			
	&-tipografia
		margin-top 2em
		figure
			width 15em
			margin 0 0 0.8em auto
			img
				width 100%
		&-imagen
			width 70%
			margin 1em auto
			img
				width 100%
		p
			&:nth-child(4)
				margin-bottom 1.5em
		&-gamaTonal
			flex-center()
			.item
				padding .9em
				span
					display block
					font-size 1.2em
					font-family 'insigne-Cabrito-NorRegIt',sans-serif
					color white					
		.gamaAlcole
			.item
				&:nth-child(1)
					background #029ccc
				&:nth-child(2)
					background #f59c19
				&:nth-child(3)
					background #f5d700
				&:nth-child(4)
					background #cd151a
				&:nth-child(5)
					background #9bc437
		.gamaMompox
			.item
				&:nth-child(1)
					background #7fb8bc
				&:nth-child(2)
					background #f8ae3e
				&:nth-child(3)
					background #d15016
				&:nth-child(4)
					background #400030
				&:nth-child(5)
					background #000000
					
		.gamaWoof
			.item
				&:nth-child(1)
					background #4da39f
				&:nth-child(2)
					background #fefdf2
					span
						color negroWeb
				&:nth-child(3)
					background #427771
					
	&-resultado
		margin-top 1.5em
		figure
			width 15em
			margin 0 auto 2em auto
			img
				width 100%
		.item
			width 80%
			margin 0 auto
			img
				width 100%
	

.ir-arriba
	display none
	padding 0.6em
	font-size 1.3em
	color verde-principal
	cursor pointer
	position fixed
	bottom 5em
	right 20px
	.span
		font-size 2em
		transform rotate(90deg)
	p
		position relative
		top -0.5em
	

/*
    FOOTER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/					
footer
	background verde-principal
	padding 0.5em 1em
	margin-top 2.3em
	flex-between()
	.item
		p
			color white
			font-size 1.1em
			font-family 'Geogtq-Lg',sans-serif
		ul
			margin 0
			padding 0
			li
				display inline-block
				list-style none
				a
					display inline-block
					color white
					span
						font-size 1.5em
					&:hover
						text-decoration none
						color amarillo-corporativo
						
		figure
			width 5em
			color white
			margin 0 auto
			img
				width 100%
		
		form
			position relative
			input
				border 0
				height 2em
				padding-right 1.5em
				width 13em
				text-indent 1em
				border-radius 3px
			.item-enviar
				position absolute
				top 0
				right 0
				text-indent 0
				background none
				background-image url("../img/enviarIcon.jpg")
				background-repeat no-repeat
				width 1.6em
				height 1.9em
				
		&:nth-child(2)
			p
				color white
				font-family 'Geogtq-Lg',sans-serif
				text-transform uppercase
				text-align center		

				
/*
	MEDIA QUERIES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
@media (max-width: 1297px)
	/**********************
        INDEX
    **********************/	
	.bienvenidoContainer
		width 80%

	/**********************
        WORK-DETALLES
    **********************/
	.workContainer
		width 85%
				

// Large devices (desktops, 62em and up)
@media (max-width: 991px)
	/**********************
			INDEX
    **********************/
	.bienvenidoContainer
		&-section
			flex-center()
			.datos
				width 48%
								
				
				
	/**********************
        WORK-DETALLES
    **********************/
	.workContainer
		width 95%	
				

// Medium devices (tablets, 48em and up)
@media (max-width: 767px)
	body
		font-size 14px
	/**********************
        INDEX
    **********************/				
	.bienvenidoContainer
		width 95%
		&-section
			display block
			.datos
				width 100%
				&:nth-child(1)
					margin 0
				&-titulo
					width 12em
					clear both
					padding 0.8em 0 0 0
					margin 0 auto
					img
						width 100%
					&:before
						display none
				p
					width 100%
					font-size 1.8em
			&:nth-child(3)
				display none
			&:nth-child(4)
				display block
	
	.contactoContainer
		width 95%
	
	footer
		display block
		.item
			&:last-child
				display none
				
	/**********************
        BIO
    **********************/					
	.bioContainer
		width 85%
		&-items
			.resum
				p
					width 80%		
@media (max-width: 630px)
	/**********************
        INDEX
    **********************/
	header
		nav
			ul
				li
					list-style none
					display inline-block
					button
						display block
						background none
						border 0
						width 3.5em
						position relative
						top -1em
						img
							width 100%
					.menu
						position fixed
						top 5.6em
						background amarillo-corporativo
						z-index 6
						width 7em
						right 4.5em
						padding 0.5em
						display none
						li
							display block
							text-align center
							a
								p
									font-size 1.3em
							&:nth-child(2)
								margin 0
	.menu-cerrar
		display none
							
	.bioIndex
		width 95%
	
	.bienvenidoContainer
		&-title
			.titulo
				width 20em
								
	/**********************
        BIO
    **********************/
	.bioPage
		&-container
			&-bio
				.item
					.avatar
						width 17em		
	.bioContainer
		width 90%
		&-hello
			p
				width 100%
		&-items
			figure
				display block
				margin 2em auto 0 auto
			.figura
				display none
			.figure-especial
				float none
				display block
				margin 1em auto 0 auto
			.resum
				display block
				p
					width 90%
				.figure
					margin 0 auto
		&-contact
			.item
				span
					font-size 1.3em
				p
					font-size 1.2em
					
	/**********************
        WORK-DETALLES
    **********************/
	.workContainer
		width 100%
		padding 4em 0 1.5em 0
		&-head
			display block
			height auto
			&-mobile
				display block
				width 17em
				margin 0 auto
				position relative
				top 1.3em
				z-index 3
				img
					width 100%
			&-video
				width 100%
				height 35vh
			&-title
				width 100%
				figure
					display none
				p
					position static
					padding 0.5em 1em
		&-problema
			figure
				margin 1em auto
			&-imgComposicion
				width 90%
		&-tipografia
			figure
				margin 1.5em auto
			&-imagen
				width 90%
			&-gamaTonal
				.item
					padding 0.5em
		&-resultado
			.item
				width 90%
				margin-top 1em
			
				

// Small devices (landscape phones, 415px and up)
@media (max-width: 415px)
	body
		font-size 12px
						
	/**********************
        BIO
    **********************/
	.bioPage
		&-container
			&-bio
				.item
					&-text
						padding 0
					.avatar
						width 15em		
	
	/**********************
        PORTFOLIO
    **********************/
		