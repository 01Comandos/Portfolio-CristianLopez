@import 'style-icon.styl'
@import 'rslides.styl'


@font-face 
    font-family 'Geog-BdIt'
    src url('../fonts/Geog-BdIt.otf')

@font-face 
    font-family 'Geog-LgIt'
    src url('../fonts/Geog-LgIt.otf')
    
@font-face 
    font-family 'Geog-MdIt'
    src url('../fonts/Geog-MdIt.otf') 
    
@font-face 
    font-family 'RGeog-RgIt'
    src url('../fonts/RGeog-RgIt.otf')
    
@font-face 
    font-family 'Geog-SbIt'
    src url('../fonts/Geog-SbIt.otf')

@font-face 
    font-family 'Geogtq-Lg'
